<zk xmlns:n="native">
    <window id="homeWindow">
        <style src="style.css"/>
        <borderlayout height="650px">
             <center>
                <hbox  spacing="20">
                    <menubar id="menubar"  orient="vertical" autodrop="true">
                    <menu label="Designer">
                            <menupopup>
