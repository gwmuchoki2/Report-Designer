                                    <menuitem label="Others" onClick="alert(self.label)" />
                            </menupopup>
                    </menu>
                    <menuitem label="Credit" onClick="alert(self.label)" />
                    <menuitem label="Customer Care" onClick="alert(self.label)" />
                    <menuitem label="Accounts" onClick="alert(self.label)" />
                    <menuitem label="Communication" onClick="alert(self.label)" />
